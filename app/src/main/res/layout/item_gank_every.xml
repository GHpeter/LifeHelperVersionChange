<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">


    <!--这个是标题-->
    <RelativeLayout
        android:id="@+id/rl_title"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/whiteBg">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_title_type"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/home_title_android" />
            <TextView
                android:id="@+id/tv_title_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="福利"
                android:textColor="@color/blackText"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title_more"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textColor="@color/blackText"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_right" />
        </LinearLayout>
    </RelativeLayout>


    <!--一张图片-->
    <LinearLayout
        android:id="@+id/ll_one_photo"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_one_photo"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:background="@color/colorPageBg"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_one_photo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/blackText1"
            android:textSize="12sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_two_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_two_one_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_two_one_one"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:scaleType="fitXY"
                android:background="@color/colorPageBg"/>
            <TextView
                android:id="@+id/tv_two_one_one_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/blackText1"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:id="@+id/ll_two_one_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_two_one_two"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:scaleType="fitXY"
                android:background="@color/colorPageBg"/>
            <TextView
                android:id="@+id/tv_two_one_two_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/blackText1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_three_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/ll_three_one_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_three_one_one"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorPageBg"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_three_one_one_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/blackText1"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:id="@+id/ll_three_one_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_three_one_two"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorPageBg"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_three_one_two_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/blackText1"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:id="@+id/ll_three_one_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_three_one_three"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorPageBg"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_three_one_three_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/blackText1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>